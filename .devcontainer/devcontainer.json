{
  "name": "The PyFoo API",
  "build": {
    "dockerfile": "../Dockerfile",
    "context": "..",
    "target": "devcontainer"
  },
  "runArgs": [
    "--env-file",
    ".env"
  ],
  "features": {
    "git": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.debugpy",
        "charliermarsh.ruff",
        "tamasfe.even-better-toml",
        "DavidAnson.vscode-markdownlint",
        "ms-azuretools.vscode-docker",
        "yzhang.markdown-all-in-one"
      ]
    }
  }
}
